@model Lab_3.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Create New Product
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag me-1"></i>Product Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-bold">
                                <i class="fas fa-list me-1"></i>Category
                            </label>
                            <input asp-for="Category" class="form-control form-control-lg" placeholder="Enter category" />
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Color" class="form-label fw-bold">
                                <i class="fas fa-palette me-1"></i>Color
                            </label>
                            <input asp-for="Color" class="form-control form-control-lg" placeholder="Enter color" />
                            <span asp-validation-for="Color" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UnitPrice" class="form-label fw-bold">
                                        <i class="fas fa-dollar-sign me-1"></i>Unit Price
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="UnitPrice" class="form-control form-control-lg" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AvailableQuantity" class="form-label fw-bold">
                                        <i class="fas fa-boxes me-1"></i>Available Quantity
                                    </label>
                                    <input asp-for="AvailableQuantity" class="form-control form-control-lg" placeholder="0" />
                                    <span asp-validation-for="AvailableQuantity" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0a58ca 0%, #084298 100%);
            transform: translateY(-1px);
        }

    .input-group-text {
        border-radius: 10px 0 0 10px;
        border: 2px solid #e9ecef;
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
        border-radius: 0 10px 10px 0;
    }

    .form-label {
        color: #495057;
        margin-bottom: 8px;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>